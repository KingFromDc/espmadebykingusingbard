-- Script to highlight all players with the color red

-- Define the color red
local redColor = Color3.fromRGB(255, 0, 0)

-- Function to highlight a player with red color
local function highlightPlayer(player)
    local character = player.Character
    if character then
        for _, part in ipairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Color = redColor
            end
        end
    end
end

-- Function to remove red color from a player
local function removeHighlight(player)
    local character = player.Character
    if character then
        for _, part in ipairs(character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Color = Color3.new(1, 1, 1) -- Reset to default color
            end
        end
    end
end

-- Connect the highlight function to players entering the game
game.Players.PlayerAdded:Connect(function(player)
    highlightPlayer(player)
end)

-- Connect the remove highlight function to players leaving the game
game.Players.PlayerRemoving:Connect(function(player)
    removeHighlight(player)
end)
